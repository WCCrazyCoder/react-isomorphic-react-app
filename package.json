{
  "name": "react-isomorphic-web-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start-prod": "better-npm-run start-prod",
    "start-dev": "better-npm-run start-dev",
    "watch-client": "node ./webpack/webpack-dev-server.js",
    "build": "rimraf dist && better-npm-run build",
    "start": "concurrently --kill-others \"npm run start-prod\"",
    "dev": "concurrently --kill-others \"npm run watch-client\" \"npm run start-dev\""
  },
  "betterScripts": {
    "build": {
      "command": "webpack --verbose --progress --display-error-details --colors --config ./webpack/webpack.prod.config.js",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "production",
        "PORT": 3000
      }
    },
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "production",
        "PORT": 3000
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_ENV": "development",
        "BABEL_ENV": "development",
        "PORT": 3000
      }
    }
  },
  "dependencies": {
    "express": "^4.15.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "better-npm-run": "0.0.15",
    "compression": "^1.6.2",
    "concurrently": "^3.4.0",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "node-sass": "^4.5.2",
    "postcss-loader": "^1.3.3",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "serve-favicon": "^2.4.2",
    "style-loader": "^0.16.1",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.4",
    "webpack-isomorphic-tools": "^3.0.2"
  }
}
